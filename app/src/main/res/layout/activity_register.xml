<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.loginAndRegister.LoginActivity"
    android:background="@drawable/bg_login"
    >

    <FrameLayout
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:layout_width="320dp"
        android:layout_height="450dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            app:cardBackgroundColor="#2ea67f"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
           >
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:layout_marginTop="50dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="50dp"
                   android:text="注册"
                   android:textColor="#fff"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   />
               <LinearLayout
                   android:layout_marginTop="10dp"
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:layout_width="match_parent"
                   android:layout_height="40dp">
                   <android.support.design.widget.TextInputLayout
                       android:textColorHint="#f0f7f4"
                       android:layout_width="match_parent"
                       android:theme="@style/TextLabel"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="13sp"
                           android:hint="邮箱"
                           android:textColor="#f0f7f4"
                           android:id="@+id/et_username"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="textPersonName"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>

               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp">



                   <android.support.design.widget.TextInputLayout
                       android:textColorHint="#f0f7f4"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <EditText
                           android:textSize="13sp"
                           android:hint="昵称"
                           android:textColor="#f0f7f4"
                           android:id="@+id/et_user"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="textPersonName"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>

               </LinearLayout>

               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="13sp"
                           android:hint="密码"
                           android:textColor="#f0f7f4"
                           android:id="@+id/et_password"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="textPassword"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>
               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="13sp"
                           android:textColor="#f0f7f4"
                           android:hint="重复密码"
                           android:id="@+id/et_repeatpassword"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="textPassword"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />


                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>


               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp">



                   <android.support.design.widget.TextInputLayout
                       android:textColorHint="#f0f7f4"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <EditText
                           android:textSize="13sp"
                           android:hint="邮箱验证码"
                           android:textColor="#f0f7f4"
                           android:id="@+id/et_emailpin"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="textPersonName"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >


                   <Button
                       android:layout_marginTop="10dp"
                       android:id="@+id/bt_getpin"
                       android:layout_marginLeft="47dp"
                       android:background="@drawable/bt_shape_2"
                       android:stateListAnimator="@drawable/state_list_animator_z"
                       android:layout_width="100dp"
                       android:layout_toLeftOf="@id/bt_go"
                       android:layout_height="50dp"
                       android:text="获得验证码"
                       android:textColor="#2fa881"
                       >
                   </Button>

                   <Button
                       android:layout_marginTop="10dp"
                       android:id="@+id/bt_go"
                       android:layout_marginLeft="20dp"
                       android:background="@drawable/bt_shape_2"
                       android:stateListAnimator="@drawable/state_list_animator_z"
                       android:layout_width="100dp"
                       android:layout_height="50dp"
                       android:text="注册"
                       android:textColor="#2fa881"
                       >
                   </Button>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/imgview_touxiang"
                       />

               </LinearLayout>

           </LinearLayout>
            </android.support.v7.widget.CardView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/plus_x"
            android:transitionName="loginFab"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


</RelativeLayout>
